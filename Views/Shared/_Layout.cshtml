
@helper GetAddEntryButtonVisibility()
{
    if ((string)ViewContext.RouteData.Values["controller"] == "Book" &&
        (string)ViewContext.RouteData.Values["action"] == "AddBook")
    {
        <text>hidden</text>
    }
    else
    {
        <text>visible</text>
    }
}

